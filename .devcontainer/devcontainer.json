{
  "name": "Ubuntu DevOps",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",  // Use Jammy for stability: ":ubuntu-22.04"

  "features": {
    // ✅ Required for DevOps work
    // Optional, but useful for cross-platform scripting
    "ghcr.io/devcontainers/features/aws-cli": "latest",
    // AWS CLI for cloud management
    "ghcr.io/devcontainers/features/azure-cli": "latest"  // Azure CLI for cloud management
  },

  // ✅ Automatically run these after attach
  "postAttachCommand": {
    "git-safe-directory": "git config --global --add safe.directory ${containerWorkspaceFolder}",
    "ansible_cfg_permissions": "sudo chmod o-w ${containerWorkspaceFolder}"
  },

  // ✅ Set up Python, Ansible, Terraform helpers
  "postCreateCommand": ".devcontainer/setup.sh",  

  // ✅ VSCode extensions tailored for DevOps
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.vscode-pull-request-github",
        "redhat.ansible",
        "hashicorp.terraform",
        "ms-toolsai.jupyter",
        "eamodio.gitlens"
    ]
    }
  }
}
