{
  "name": "Ubuntu DevOps",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",

  "features": {
    "ghcr.io/devcontainers/features/aws-cli": "latest",
    "ghcr.io/devcontainers/features/azure-cli": "latest"
  },

  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "remoteUser": "root",

  "postAttachCommand": "git config --global --add safe.directory ${containerWorkspaceFolder} && sudo chmod o-w ${containerWorkspaceFolder}",

  "postCreateCommand": "apt-get update && apt-get install -y docker.io && /bin/bash /workspaces/New_pro2/.devcontainer/setup.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.vscode-pull-request-github",
        "redhat.ansible",
        "hashicorp.terraform",
        "eamodio.gitlens",
        "AmazonWebServices.aws-toolkit-vscode"
      ]
    }
  }
}
